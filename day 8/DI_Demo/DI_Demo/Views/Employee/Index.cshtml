@model IEnumerable<DI_Demo.Models.EF.EmployeeInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDesignation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpIsPermenant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpDeptNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpDesignation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpIsPermenant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpDeptNavigation.DId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmpNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmpNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmpNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
